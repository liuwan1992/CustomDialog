<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置边框颜色 -->
    <item>
        <shape>
            <solid android:color="#D0D0D0" />
        </shape>
    </item>
    <!-- 设置边框宽度和布局填充色 -->
